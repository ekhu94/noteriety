<div id="form-container" class="container shadow-lg text-center">

    <h1 class="display-3"><%= @subject.name.upcase %></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Topic</th>
                <th scope="col">Date</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% @subject.notes.each do |n| %>
                <tr>
                    <td><%= link_to n.topic, note_path(n) %></td>
                    <td><%= n.created_at.strftime('%-m/%e/%Y') %></td>
                    <td><a href="<%= edit_note_path %>"><i class="far fa-edit ms-2"></i></a></td>
                    <td>
                        <%= link_to note_path(n), method: :delete, class: 'btn btn-white ms-3 p-0', data: {confirm: "Are you sure you want to delete this note?"} do %>
                            <i class="far fa-trash-alt text-danger"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="row justify-content-center text-center mt-5">
        <div class="col-lg-1"></div>
        <%= link_to "Back", subjects_path, class: 'btn btn-outline-success col-md-4 btn-lg-3 btn-block' , id: 'form-button' %>
        <%= link_to "Home", root_path, class: 'btn btn-outline-info col-md-4 btn-lg-3 btn-block', id: 'form-button' %>
        <div class="col-lg-1"></div>
    </div>
</div>