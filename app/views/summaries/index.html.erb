<div class="container text-center">
    <h1 class="display-5 my-4">Summaries</h1>
    <% if current_user.notes.length == 0 %>
        <h4>No summaries yet to display!</h4>
    <% end %>
    <div id="note-list" class="row justify-content-center m-2">
        <% current_user.subjects.uniq.each do |subject| %>
            <div class="col-12">
                <h5 class="display-6 m-4"><%= subject.name %></h5>
            </div>
            <% subject.notes.each do |n| %>
                <div class="col-lg-4 col-sm-6 my-3">
                    <h6><%= link_to n.topic, note_path(n) %></h6>
                    <%= n.summary_note %>
                </div>
            <% end %>
        <% end %>
    </div>

    <div class="row justify-content-center text-center">
        <%= link_to "Home", root_path, class: 'btn btn-outline-info col-6 col-md-3 btn-block mb-5', id: 'form-button' %>
    </div>
</div>

