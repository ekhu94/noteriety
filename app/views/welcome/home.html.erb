<div class="d-grid gap-2 col-6 mx-auto">
  <%= link_to "Write a new note", new_note_path, class: 'btn btn-outline-success', id: 'create-btn' %>
</div>

<div id="carouselExampleIndicators" class="carousel slide mx-auto my-0" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
        <%= image_tag("carousel-1.jpg", :alt => "slide-1", class: 'd-block w-100') %>
        <div class="carousel-caption d-none d-md-block">
            <h2 class="display-4">Hello, <%= current_user.username %></h2>
            <p id="carousel-p">Today is <%= date_today %>.</p>
        </div>
    </div>
    <div class="carousel-item">
        <%= image_tag("carousel-2.jpg", :alt => "slide-2", class: 'd-block w-100') %>
        <div class="carousel-caption d-none d-md-block">
            <h2 class="display-5">Capture your best ideas</h2>
            <blockquote class="blockquote">
                <p class="mb-3">Anything that is not managed will deteriorate.</p>
                <footer class="blockquote-footer">CreateSpace Independent Publishing</footer>
            </blockquote>
        </div>
    </div>
    <div class="carousel-item">
        <%= image_tag("carousel-3.jpg", :alt => "slide-3", class: 'd-block w-100') %>
        <div class="carousel-caption d-none d-md-block">
            <h2 class="display-5">Organized thoughts, life-long habits</h2>
            <blockquote class="blockquote">
                <p class="mb-3">The weakest ink is stronger than the strongest memory.</p>
                <footer class="blockquote-footer">The Exponential Growth Strategist</footer>
            </blockquote>
        </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"  data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"  data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>