<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h4 class="alert-heading">The following errors occurred while attempting to sign up:</h4>
    <hr>
    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div id="form-container" class="container shadow-lg px-5">

    <h1 class="display-5 text-center">Sign up for Noteriety</h1>
    
    <%= form_for @user do |f| %>

        <div class="row justify-content-center">
            <div class="form-group col-md-5">
                <%= f.label :username, "Full Name" %>
                <%= f.text_field :username, class: 'form-control' %>
            </div>
            <div class="col-md-auto"></div>
            <div class="form-group col-md-5">
                <%= f.label :email, "Email Address" %>
                <%= f.text_field :email, class: 'form-control' %>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="form-group col-md-5">
                <%= f.label :password, "Password" %>
                <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="col-md-auto"></div>
            <div class="form-group col-md-5">
                <%= f.label :password_confirmation, "Confirm Password" %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>

        <div class="row">
            <div class="col-3 col-md-4"></div>
            <div class="form-group col-6 col-md-4">
                <%= f.submit "Sign Up", class: 'btn btn-outline-success btn-block form-control', id: 'login-button' %>
            </div>
            <div class="col-3 col-md-4"></div>
        </div>
    <% end %>

    <div class="mt-4 text-center"><a href="<%= login_path %>">Already a member?</a></div>
</div>